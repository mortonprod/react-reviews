{
  "files": [
    "./src/reviews.tsx",
    "myTypings.d.ts"
 	],
  "compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"types": ["node"],
		"typeRoots": [ "./node_modules/@types" ],
    "removeComments": true,
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitOnError": false,
    "outDir": "./dist/"
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "node_modules",
    "./src/__tests__/*"
  ]
}
